{
  "build": {
    "env": {
      "REACT_APP_VAULT_API_URL": "@vault_api_url"
    }
  },
  "builds": [
    {
      "src": "client/package.json",
      "use": "@now/static-build",
      "config": {
        "outDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/favicon.ico",
      "dest": "/client/public/logo.svg"
    },
    {
      "src": "/static/(.*)",
      "headers": {
        "cache-control": "s-maxage=31536000,immutable"
      },
      "dest": "client/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "client/index.html"
    }
  ]
}
